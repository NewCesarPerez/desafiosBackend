<% if(productos.length){ %>
<table class="table m-auto mt-5 w-75">
    <thead>    
        <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Url</th>
        </tr>
    </thead>
<tbody>
    <% productos.forEach(prod=>{ %>
    <tr class="w-75">
        <td class="w-25" style="color:gold"><%=prod.nombre%></td>
        <td  class="w-25" style="color:gold"><%=prod.precio%></td>
        <td  class="w-25" style="color:gold"><img class="w-25 px-2 mx-auto d-flex justify-content-center" src=<%=prod.url%> alt="Ruta a imagen"></td>
    </tr>
    <% })%>
</tbody>
</table>
<% } else{ %>
    <div class="border d-grid gap-2 col 6 mx-auto text-center mt-5">
        <p class="text-warning"> No hay productos</p>
    </div>
<% } %>
